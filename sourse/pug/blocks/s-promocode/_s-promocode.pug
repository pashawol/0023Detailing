mixin s-promocode()
	// start s-promocode
	+b.SECTION.s-promocode.section#s-promocode&attributes(attributes)
		+pic("brook.png")(class="s-promocode__img-text"   class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay * 1.2  * 1.2* 1.2 * 1.2}s`)
		+e.stock(class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay * (Math.pow(1.2 , 5))}s`) -10%
		.container
			+e.block
				+b.section-title(class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay}s`)
					h2 промокод 
						span.text-white brook
				div(class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay * 1.2}s`)
					p До&nbsp;31&nbsp;ноября 2019 по&nbsp;промокоду &laquo;BROOK&raquo; скидка&nbsp;10% на&nbsp;любую услугу.
				+e.btn.link-modal(href="#modal-call" data-title="Воспользоваться скидкой" data-btn="Отправить" data-order=`Воспользоваться скидкой `  class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay * 1.2  * 1.2}s`)  Воспользоваться скидкой
			+e.right-block(  class="wow fadeIn" data-wow-duration=`${dur}s`  data-wow-delay=`${delay * 1.2  * 1.2* 1.2}s`)
				+e.img-wrap2
					+pic("promocode-car.png")
	// end s-promocode